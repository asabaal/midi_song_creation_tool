{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended", 
    "plugin:jest/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["src/server/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/*.test.js", "**/*.test.jsx"],
      "rules": {
        "react/prop-types": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "jest", "prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
