{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["src/server/**/*.js"],
      "rules": {
        "no-console": "off" // Allow console.log in server files
      }
    },
    {
      "files": ["**/*.test.js", "**/*.test.jsx"],
      "rules": {
        "react/prop-types": "off" // Turn off prop-types check in test files
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "jest", "prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off" // For React 17+ which doesn't require importing React
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
